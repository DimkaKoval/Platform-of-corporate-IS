<Window x:Class="OperatorTaxi.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OperatorTaxi"
        mc:Ignorable="d"
        Title="Add Taxist" Height="230" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Left" Margin="24,22,0,0" TextWrapping="Wrap" Text="Модель машини" VerticalAlignment="Top" Height="30" Width="63"/>
            <TextBox x:Name="Model" Grid.Row="0" Width="180" Height="30" HorizontalAlignment="Right" Margin="0 0 20 0"/>

            <TextBlock HorizontalAlignment="Left" Margin="24,22,0,0" TextWrapping="Wrap" Text="Номер машини" VerticalAlignment="Top" Height="30" Width="63" Grid.Row="1"/>
            <TextBox x:Name="Number" Grid.Row="1" Width="180" Height="30" HorizontalAlignment="Right" Margin="0 0 20 0"/>
        </Grid>
        <Button Content="Добавити Водія" Height="auto" Width="auto" Click="AddTaxist" Grid.Row="1"></Button>
    </Grid>
</Window>
